# Hakgida Backend Environment Variables - cPanel Production

# Server Configuration
NODE_ENV=production
PORT=3001

# cPanel MySQL Database Configuration
# cPanel'den alacağınız bilgiler:
DATABASE_URL=mysql://cpanel_username:cpanel_password@localhost:3306/cpanel_database_name
# Örnek: mysql://hakgida_user:secure_password@localhost:3306/hakgida_db

# JWT Configuration - CRITICAL FOR SECURITY
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-characters-recommended-64
JWT_EXPIRES_IN=8h

# Admin Configuration - ENHANCED SECURITY
# Option 1: Plain password (NOT recommended for production)
ADMIN_PASSWORD=hakgida2024

# Option 2: Hashed password (RECOMMENDED for production)
# Generate hash: Use /api/admin/change-password endpoint or run:
# node -e "const bcrypt = require('bcryptjs'); bcrypt.hash('your-password', 12, (err, hash) => console.log(hash));"
# ADMIN_PASSWORD_HASH=$2a$12$your-hashed-password-here

# Two-Factor Authentication (Optional but recommended)
TWO_FACTOR_ENABLED=false
# Set to true to enable 2FA (requires email/SMS integration)

# CORS Configuration - Your Domain
FRONTEND_URL=https://yourdomain.com
ADMIN_URL=https://yourdomain.com/admin.html
CORS_ORIGIN=https://yourdomain.com

# Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,webp

# Security - Enhanced Configuration
SESSION_SECRET=your-session-secret-here

# Rate Limiting (Automatic - configured in middleware)
# Login attempts: 5 per 15 minutes, then blocked for 30 minutes
# Severe: 10 failed attempts in 1 hour = 24 hour block
# API: 100 requests per minute per IP

# IP Blocking (Automatic - managed in memory)
# Failed login tracking enabled
# Automatic IP blocking after multiple failed attempts

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Production Settings
TRUST_PROXY=true
ENABLE_COMPRESSION=true
ENABLE_HELMET=true 