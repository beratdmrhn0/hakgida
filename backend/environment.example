# Hakgida Backend Environment Variables - cPanel Production

# Server Configuration
NODE_ENV=production
PORT=3001

# cPanel MySQL Database Configuration
# cPanel'den alacağınız bilgiler:
DATABASE_URL=mysql://cpanel_username:cpanel_password@localhost:3306/cpanel_database_name
# Örnek: mysql://hakgida_user:secure_password@localhost:3306/hakgida_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# Admin Configuration
ADMIN_PASSWORD=hakgida2024

# CORS Configuration - Your Domain
FRONTEND_URL=https://yourdomain.com
ADMIN_URL=https://yourdomain.com/admin.html
CORS_ORIGIN=https://yourdomain.com

# Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,webp

# Security
SESSION_SECRET=your-session-secret-here
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Production Settings
TRUST_PROXY=true
ENABLE_COMPRESSION=true
ENABLE_HELMET=true 