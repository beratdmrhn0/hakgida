{
  "name": "hakgida-backend",
  "version": "1.0.0",
  "description": "Hakgida Backend API - Cloud-based product management system",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "cpanel-start": "NODE_ENV=production node server.js",
    "dev": "nodemon server.js",
    "build": "npm install --production",
    "deploy": "echo 'cPanel deployment'",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "cpanel-install": "npm install --production --no-optional",
    "cpanel-setup": "npm run cpanel-install && npm run db:migrate && npm run db:seed"
  },
  "keywords": [
    "nodejs",
    "express",
    "postgresql",
    "railway",
    "api",
    "backend"
  ],
  "author": "Hakgida",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.14.1",
    "rate-limiter-flexible": "^4.0.1",
    "sequelize": "^6.35.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/beratdmrhn0/hakgida.git"
  },
  "bugs": {
    "url": "https://github.com/beratdmrhn0/hakgida/issues"
  },
  "homepage": "https://hakgida.com"
}
